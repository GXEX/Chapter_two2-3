<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.widget.Button
        android:id="@+id/button1"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FCF086"
        android:text="@string/strBtn1"></android.widget.Button>

    <android.widget.Button
        android:id="@+id/button2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00EE3C"
        android:text="@string/strBtn2"
        android:visibility="visible"></android.widget.Button>

    <android.widget.Button
        android:id="@+id/button3"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#0098B3"
        android:text="@string/strBtn3"
        android:visibility="visible"></android.widget.Button>

    <android.widget.Button
        android:id="@+id/button4"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FF5722"
        android:text="@string/strBtn4"
        android:visibility="visible"></android.widget.Button>

</LinearLayout>